<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    
    <useStyles filename="Interface/Styles/ClearStyle1/clear-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <style id="HFontBig">
        <attributes font="Interface/Fonts/HelveticaNeue.fnt" color="#ff2f"  />
    </style>
    <screen id="PauseScreen" controller="magiccard.ui.UIInGame">
        <layer height="100%" width="100%" id="layer1" childLayout="vertical" backgroundColor="#011a">
            <panel height="90%" width="100%" id="centerPanel" childLayout="center" align="center" >
                <text style="HFontBig" width="100%" height="100%" id="Pause" color="#ffff" text="Pause" align="center" valign="center"/>
            </panel>
            <panel height="10%" width="100%" id="centerPanel" childLayout="center" align="center" >
                <control style="clear-button" id="btnExitToMenu" width="40%" name="button" label="Exit to menu" align="center">
                    <interact onClick="exitToMenu()"/>
                </control>
            </panel>
        </layer>
    </screen>
</nifty>
